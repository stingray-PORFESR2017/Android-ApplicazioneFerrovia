<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cnr.isti.traininfo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <permission android:name="cnr.isti.traininfo.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="cnr.isti.traininfo.permission.C2D_MESSAGE" />



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".StatusActivity"
            android:label="@string/status_activity_name"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme2">
            <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="cnr.isti.traininfo.MainActivity" />
        </activity>
        <activity
            android:name=".DAInfo"
            android:label="@string/da_activity_name"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme2">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cnr.isti.traininfo.MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CmadExtendedInfoActivity"
            android:parentActivityName=".StatusActivity"
            android:theme="@style/AppTheme2">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cnr.isti.traininfo.MainActivity" />
        </activity>
        <activity
            android:name=".MadredExtendedInfoActivity"
            android:parentActivityName=".CmadExtendedInfoActivity"
            android:label="Info Madred"
            android:theme="@style/AppTheme2">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cnr.isti.traininfo.MainActivity" />
        </activity>
        <activity
            android:name=".MadillExtendedInfoActivity"
            android:parentActivityName=".CmadExtendedInfoActivity"
            android:label="Info Madill"
            android:theme="@style/AppTheme2">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cnr.isti.traininfo.MainActivity" />
        </activity>

