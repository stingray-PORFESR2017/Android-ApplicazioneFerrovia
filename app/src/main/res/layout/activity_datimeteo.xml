<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeteoActivity">


    <TextView
        android:id="@+id/textViewTempeOggi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewoggiTempMattino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"

        android:text="TextView"
        app:layout_constraintTop_toTopOf="@+id/textViewTempeOggi"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textViewTempeoggiTempPomeriggio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"

        app:layout_constraintTop_toBottomOf="@+id/textViewoggiTempMattino"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textViewTempeoggiTempSera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"

        app:layout_constraintTop_toBottomOf="@+id/textViewTempeoggiTempPomeriggio"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textViewTempedomaniTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"

        app:layout_constraintTop_toBottomOf="@+id/textViewTempeoggiTempSera"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textViewTempedomanimattinaTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"

        app:layout_constraintTop_toBottomOf="@+id/textViewTempedomaniTemp"
        tools:layout_editor_absoluteX="0dp" />
    <TextView
        android:id="@+id/textViewTempedomanipomeriggioTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"

        app:layout_constraintTop_toBottomOf="@+id/textViewTempedomanimattinaTemp"
        tools:layout_editor_absoluteX="0dp" />
    <TextView
        android:id="@+id/textViewTempedomaniseraTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"

        app:layout_constraintTop_toBottomOf="@+id/textViewTempedomanipomeriggioTemp"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageViewMeteo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/diamond"
        tools:layout_editor_absoluteY="24dp" />


</androidx.constraintlayout.widget.ConstraintLayout>